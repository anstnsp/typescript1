//이파일에 typescript에게 어떻게 javascript로 변환하는지 알려주면서 옵션을 준다. 

{
    "compilerOptions": {
        "module":"commonjs",
        "target": "es2015",
        "sourceMap": true,
        "outDir": "dist"  //ts파일을 컴파일 해서 js로 나온거는 이 폴더에 넣음. 
    },
    "include": ["src/**/*"], //컴파일과정에서 포함시킬 파일들을 배열로 적음.
    "exclude": ["node_modules"] //컴파일과정에서 제외할거 적음. 
}